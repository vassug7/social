{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block bread %}
â†’ Register
{% endblock %}
{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="rounded-md p-2 border-red-300 bg-red-50 border dark:border-red-600 dark:bg-red-700 dark:text-white mb-4" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {{form_start(form)}}
    <div class="text-xl">
       Basic Information
    </div>
    <div class="text-gray-400 dark:text-gray-500 mb-4 pb-4 border-b border-gray-300">
       Enter your credentials
    </div>
    <div>
    {{ form_label(form.email,'Username',{'label_attr':{'class':'block text-sm text-gray-700  dark:text-gray-300 font-medium'}})}}
    {{ form_widget(form.email,{'attr':{'class':'block w-full shadow-sm  border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}})}}
    {{ form_errors(form.email)}}
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
        {{ form_label(form.Password.first,'Password',{'label_attr':{'class':'block text-sm text-gray-700  dark:text-gray-300 font-medium'}})}}
        {{ form_widget(form.Password.first,{'attr':{'class':'block w-full shadow-sm  border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}})}}
        {{ form_errors(form.Password.first)}}
        </div>
        <div>
        {{ form_label(form.Password.second,'Repeat password' ,{'label_attr':{'class':'block text-sm text-gray-700  dark:text-gray-300 font-medium'}})}}
        {{ form_widget(form.Password.second,{'attr':{'class':'block w-full shadow-sm  border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}})}}
        {{ form_errors(form.Password.second)}}
        </div>
    </div>
    <div class"flex  items-center mt-4 mb-4 pt">
    {{form_widget(form.agreeTerms,{'attr':{'class':'h-4 w-4 rounded border-gray border text-indigo-300 mr-2'}})}}
    {{form_label(form.agreeTerms,'Agree to terms',{'label_attr':{'class':'text-sm text-gray-700 dark:text-gray-300 '}})}}
    </div>
    <div class="border-b border-gray-300 pt-4 "></div>
    <div class="text-xl mt-4">
       Your Profile
    </div>
    <div class="text-gray-400  mb-4 pb-4 border-b border-gray-300 dark:text-gray-500">
       Enter more (optional) details about yourself. You can do it later.
    </div>
    {{include('/settings_profile/_profile_form.html.twig',{form:form.userProfile})}}
    <div>
    <button  type="submit" class="block w-full  shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-1 mb-2">Register! </button>
    </div>
    {{ form_end(form) }}
    <div class="mt-2 text-center text-gray-600 dark:text-gray-400">
     Already have an account?<a href="{{path('app_login')}}">Login here</a>
    </div>
{% endblock %}
