{% embed 'shared/_tabs.html.twig'%}
    {% block tabs %}
        {% embed 'shared/_tab.html.twig' with { route:'app_profile'}%}
             {% block path %}{{ path('app_profile',{ id: user.id}) }}{% endblock %} 
             {% block content %}
                Posts 
                <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">{{ user.posts.count }}</span>
                {# Posts <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">{{ user.posts.count }}</span> #}
             {% endblock %}      
        {% endembed %}
        {% embed 'shared/_tab.html.twig' with { route:'app_profile_follows', classes:'ml-6'} %}
             {% block path %}{{ path('app_profile_follows',{ id: user.id}) }}{% endblock %} 
             {% block content %}
                Following 
                <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">{{ user.follows.count }}</span>
             {% endblock %}      
        {% endembed %}
        {% embed 'shared/_tab.html.twig' with { route:'app_profile_followers',classes:'ml-6'}%}
             {% block path %}{{ path('app_profile_followers',{ id: user.id}) }}{% endblock %} 
             {% block content %}
                Followers <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">{{ user.followers.count }}</span>
             {% endblock %}      
        {% endembed %}
    {% endblock %}
{% endembed %}