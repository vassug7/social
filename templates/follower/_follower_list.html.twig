{% if users|length > 0  %}
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-4">
       {% for otherUser in users %}
            <div class="flex  items-center justify-between mr-16 ">
                <div class="flex">
                    <div class="mr-2">
                    {{include('shared/_avatar.html.twig',{size: 9,profile: otherUser.userProfile})}}
                    </div>
                    <div>
                        <a href="{{ path('app_profile', { id: otherUser.id }) }}">
                            <div class="text-lg">
                                {{ otherUser.userProfile.name ?? otherUser.email }}
                            </div>
                            <div class="text-gray-500 text-sm">
                                {{ otherUser.email }}
                            </div>
                        </a>
                    </div>
                </div>
                <div class="">
                    {{ include('follower/_follow_button.html.twig', { userToFollow: otherUser }) }}
                </div>
            </div>      
        {% endfor %}
    </div>
{% else %}
    <div class="w-full text-center">
       <div class="font-bold text-gray-600 dark:text-gray-400">Nothing to show</div>
       <div class="text-gray-400 dark:text-gray-500">The list is empty currently</div>
    </div>
{% endif %}